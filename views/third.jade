extends layout

block content
  h1.actorHeader Which actress/actor are you in the mood for?
  div.peopleResults
  p.leftImage
  img(src="http://image.tmdb.org/t/p/w500" + result1.profile_path Onclick="window.location.href='/result'")
  p.rightImage
  img(src="http://image.tmdb.org/t/p/w500" + result2.profile_path result2.profile_path Onclick="window.location.href='/result'")
  form(method="post" action"/third")
    label(for="leftName") #{result1.name}
    input(type="radio" value= result1.name name="actorName" id="leftName")
    label(for="rightName") #{result2.name}
    input(type="radio" value= result2.name name="actorName" id="rightName")
    input(type="submit")
    
